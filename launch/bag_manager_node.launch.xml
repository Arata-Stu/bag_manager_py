<launch>
  
  <arg name="bag_param"  default="$(find-pkg-share bag_manager_py)/config/bag_manager.param.yaml"/>
  <!-- joynode -->
  <node pkg="bag_manager_py" 
        exec="bag_manager_node"
        name="bag_manager_node"
        output="screen">
    <param from="$(var bag_param)"/>
    <!-- joy -->
    <remap from="/rosbag2_recorder/trigger" to="/rosbag2_recorder/trigger"/>
  </node>


</launch>